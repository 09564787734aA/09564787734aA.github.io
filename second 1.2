body {
    font-family: Arial, sans-serif;

    margin: 0;
    padding: 0;
}

/*header */
.header {
    text-align: center;
    background-color: rgb(26, 23, 23);
    color: white;
    padding: 20px;
    border-bottom: solid #ece5e5;
}
.header h1 {
    margin: 18px 0 1px;
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    font-size: 35px;   
}

.header p {
    margin: 8px 0 10px;
    font-style: italic;
}

/*navigation bar */
.navbar {
    background-color: #333531;
    color: white;
    font-family: Arial, Helvetica, sans-serif;
    padding: 2px;
    width: 100%;
    border-bottom: solid #ece5e5;

} 

.navbar ul {
    list-style-type: none;
    display: flex;
    justify-content: center;

}


.navbar a {
    display: block;
    padding: 15px 28px;
    color: white;
    font-weight: bold;

}


.navbar a:hover {
    background-color: black;
    color: azure;
}

h1 {
    margin: 0;
}

.content {
    text-align: center;
    padding-bottom: 15px;

}

.content h2 {
    font-size: 30px;
    color: black;
}


/* about page */
#about {
    background-image: url('images/sink1.jpg');
    background-size: cover; 
    background-position: center; 
    background-repeat: no-repeat; 
    color: white;
    padding: 100px; 
    text-align: center; 
}

#about h2 {
    font-size: 48px;
}

#about p {
    font-size: 20px;
    background-color: rgba(42, 54, 52, 0.5); 
    padding: 15px;
    border-radius: 5px;
    width: 50%;
    margin: 0 auto; 
}

/*types page */
.types {
    border-radius: 10px;

}
#types img{
    float: left;
    width: 20%;
    margin: 10px 20px 15px 300px;
}


#types h2, #types p {
    padding: 0px;
    margin: 10px 0 0 0;
    text-align: left;
}

#types h2 {
    font-size: 48px;
    margin: 10px;
}

#types p {
    font-size: 20px;
}


